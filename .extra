#!/usr/bin/env bash

# ------------------------------------
# EXPORTS
# ------------------------------------

GITHUB_HANDLE="JamieMason"
USER_NAME="Jamie Mason"
USER_EMAIL="jamie@foldleft.io"
USER_URL="https://github.com/JamieMason"

# git
GIT_AUTHOR_NAME="$USER_NAME"
GIT_COMMITTER_NAME="$USER_NAME"
git config --global user.name "$USER_NAME"
GIT_AUTHOR_EMAIL="$USER_EMAIL"
GIT_COMMITTER_EMAIL="$USER_EMAIL"
git config --global user.email "$USER_EMAIL"
git config --global core.editor "code --wait"

# fnm
eval "$(fnm env)"

# npm
npm config set --location=global init-author-email "$USER_EMAIL"
npm config set --location=global init-author-name "$USER_NAME"
npm config set --location=global init-author-url "$USER_URL"

# rust
source $HOME/.cargo/env
